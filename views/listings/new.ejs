<% layout("/layouts/template") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
      <br>
      <h3>New Listing</h3>
       <br>
       <br>
        <form method="post" action="/listings">
          <div class ="mb-3">
            <label class ="form-label"form="title">Title</label>
          <input class ="form-control" name="listing[title]"  placeholder="enter title" type="text" />
        </div>
          
      <div class ="mb-3">
            <label class ="form-label"form="title">Description</label>
          <textarea class ="form-control" name="listing[description]" placeholder="enter description.."></textarea>
        </div>
      <div class ="mb-3">
            <label class ="form-label" form="Image">Image</label>
          <input class ="form-control" name="listing[image]" placeholder="enter image URL/Link" type="text" />
        </div>  
        <div class ="row">
            <div class ="mb-3 col-md-4">
            <label class ="form-label" form="Image">Price</label>
          <input class ="form-control" name="listing[price]" placeholder="enter price" type="text" />
        </div>  
      
      <div class ="mb-3 col-md-8">
            <label class ="form-label" form="Image">Country</label>
          <input class ="form-control" name="listing[country]" placeholder="enter country" type="text" />
        </div> 
        </div>
      
      <div class ="mb-3">
            <label class ="form-label" form="Image">Location</label>
          <input class ="form-control" name="listing[location]" placeholder="enter location" type="text" type="text" />
      </div> 
      
      <button class="btn btn-dark add-btn" >Add</button>
        </form>
  </div>
  </div>